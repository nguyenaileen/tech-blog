<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Post:</h3>

    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-name">Post Title:</label>
        <input class="form-input" type="text" id="post-name" name="post-name" />
      </div>
  
      <div class="form-group">
        <label for="post-desc">Post:</label>
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>

         <div class="form-group">
        <label for="post-location">Your Location:</label>
        <input class="form-input" type="text" id="post-location" name="post-location" />
      </div>
      <div class="form-group">
        <label for="imageFile" class="form-label">Image upload</label>
        <input class="form-control" type="file" id="imageFile" />
      </div>
      <div class="form-group form-button">
        <button type="submit" class="btn btn-primary">CREATE POST</button>
      </div>
    </form>
  </div>

  {{#if posts.length}}
  <div class="col-md-6 post-list">
    <h3>Current Posts:</h3>

<div class="row mb-2">
    {{#each posts as |post|}}
      <div class="col-md-6">
        <div class="card"id="profile-card-size">
      <img class="card-img-top" id="profile-image-size" src="{{post.image_url}}" alt="Card image cap" />
      <div class="card-body">
        <h5 class="card-title"><a id="card-link" href="/posts/{{post.id}}">{{post.name}}</a></h5>
        <p class="card-text">{{post.description}}</p>
         <!-- <a href="/posts/{{post.id}}" > View full post </a>  -->
      </div>
      <div class="card-location border">
        <p class="card-text" id="location"><small class="text-muted">Seen by {{user.name}} on {{format_date date_created}} in üìç{{post.location}}</small></p>
         <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
      </div>
     
    </div>
      </div>
    {{/each}}
    </div>
  </div>
  {{/if}}
</div>


<script src="./js/profile.js"></script>



